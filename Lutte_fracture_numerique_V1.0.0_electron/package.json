{
  "name": "lutte-fracture-numerique",
  "version": "1.0.0",
  "description": "Formation numérique accessible pour tous",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win32": "electron-builder --win --ia32",
    "build:win64": "electron-builder --win --x64",
    "build:mac": "electron-builder --mac",
    "build:linux64": "electron-builder --linux --x64",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "keywords": [
    "formation",
    "accessibilité",
    "numérique",
    "seniors"
  ],
  "author": "BrunoDevCraft",
  "license": "MIT",
  "devDependencies": {
    "electron": "^39.2.3",
    "electron-builder": "^24.9.0"
  },
  "dependencies": {
    "electron-store": "^8.1.0"
  },
  "build": {
    "appId": "com.lutte-fracture-numerique.app",
    "productName": "Lutte Fracture Numérique",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "app/**/*",
      "main.js",
      "preload.js",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["ia32"]
        },
        {
          "target": "portable",
          "arch": ["ia32"]
        }
      ],
      "icon": "build/icon.ico"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "build/icon.icns",
      "category": "public.app-category.education"
    },

    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Formation Numérique"
    }
  }
}